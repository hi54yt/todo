<p id="notice"><%= notice %></p>

<p>
  <b>Goal:</b>
  <%= @list.goal %>
</p>

<p>
  <b>Condition:</b>
  <i class=<%= "#{ @list.condition == 'true' ? 'icon-ok' : 'icon-remove' }" %>></i>
</p>

<%= simple_form_for @list do |f| %>
  <div class="field">
    <%= f.input :condition, :as => :radio_buttons, :label => '你的朋友完成任务了吗？请选择：' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to '返回', lists_path %>
